{% form_theme order_form 'bootstrap_4_layout.html.twig' %}
{% extends 'baseuser.html.twig' %}

{% block title %}Cart manager
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Order</h2>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in cart_manager.items %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ item.product.id }} - {{ item.product.name }}</td>
                            <td>{{ item.product.Price }}</td>
                            <td>{{ item.quantity }}</td>
                            <td>{{ item.amount }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan='4' class='text-center'><strong>SUM</strong></td>
                            <td><strong>{{ cart_manager.amount }}</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div class="col-md-6">
            <h2>Customer Information</h2>
            {{ form_start(order_form) }}
            {{ form_widget(order_form) }}
            {# <div class="text-center mt-3"> #}
            {# <input type="submit" value="Confirm Order" class="btn btn-primary" /> #}
                <a href="{{ path('app_ds_user_invoice') }}" class="btn btn-primary">Confirm Order</a> </div>
            {{ form_end(order_form) }}
        </div>
    </div>
</div>


{% endblock %}

{% block javascripts %}
{% if message is not empty %}
    <script> alert("{{message}}");</script>
{% endif %}
{% endblock %} 






