{% extends 'baseuser.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="container">

    <table class="table" style="text-align: center"
        <thead>
            <tr>
            <th colspan="2">
                YOUR PROFILE
            </th>
        </tr>
        <tr>
            <td>
                Username:
            </td>
            <td><input type="fullname" name="fullname" id="fullname" ></td>
        </tr>
        <tr>
            <td>
                Password:
            </td>
            <td><input type="password" name="password" id="password" placeholder="Blank if you don't want to update password"> </td>
        </tr>
        <tr>
            <td>
                FirstName:
            </td>
             <td><input type="firstname" name="firstname" id="firstname"></td>
        </tr>
        <tr>
            <td>
                LastName:
            </td>
            <td><input type="lastname" name="lastname" id="lastname"></td>
        </tr>
        <a href="{{path('app_modify_profile')}}"> Modify</a>

         </thead>

        {% for user in data %}
				<tr>
                    <td>{{loop.index}}</td>
                    <td>{{user.getId()}}</td>
                    <td>{{user.getUsername()}}</td>
                    <td>{{user.getPassword()}}</td>
                    <td>{{user.getFirstName()}}</td>
                    <td>{{user.getLasttName()}}</td>
				</tr>
			{% endfor %}
    </table>
</div>
{% endblock %}
