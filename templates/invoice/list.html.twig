{% extends 'base.html.twig' %}

{% block title %}Hello Invoice!{% endblock %}

{% block body %}

<div class="container">

    <table class="table" style="text-align: center"
        <thead>
            <tr >
                <td> No </td>
                <td> Invoice Code  </td>
                <td> Customer Name </td>
                <td> Address </td>
                <td> Phone Number </td>
                <td> Total Price </td>
                <td> Status </td>
                <td> Act </td>
            </tr>
         </thead>

         <tbody>
            {% for inv in data %}
                <tr>
                    <td>{{loop.index}}</td>
                    <td>{{inv.getId()}}</td>
                    <td>{{inv.getCustomerName()}}</td>
                    <td>{{inv.getCustomerAddress()}}</td>
                    <td>{{inv.getCustomerPhone()}}</td>
                    <td>{{inv.getTotalPrice()}}</td>
                    <td>{{inv.isStatus()}}</td>
                    <td>
                        <a href="{{path('app_ds_Invoicedetail',{'id':inv.getId()})}}" class="btn btn-warning"> Detail</a>
                    </td>
                </tr>
             {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
