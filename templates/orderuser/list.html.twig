
{% extends 'baseuser.html.twig' %}

{% block title %}Hello Invoice!{% endblock %}

{% block body %}

<div class="container">
  

			{# <a href="{{path('app_ds_user_invoice')}}" class="btn btn-primary">Confirm</a> #}


    <table class="table" style="text-align: center"
        <thead>
            <tr >
                <td> No </td>
                <td> Invoice Code  </td>
                <td> Customer Name </td>
                <td> Address </td>
                <td> Phone Number </td>
                <td> Total Price </td>
                {# <td> Status </td> #}
                {# <td> Act </td> #}
            </tr>
         </thead>

         <tbody>
            {% for inv in data %}
                <tr>
                    <td>{{loop.index}}</td>
                    <td>{{inv.getId()}}</td>
                    <td>{{inv.getCustomerName()}}</td>
                    <td>{{inv.getCustomerAddress()}}</td>
                    <td>{{inv.getCustomerPhone()}}</td>
                    <td>{{inv.getTotalPrice()}}</td>
                    <td>{{inv.isStatus()}}</td>
                    <td>
                    </td>
                </tr>
             {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %} 
